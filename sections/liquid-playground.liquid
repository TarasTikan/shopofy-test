  {% assign title = ' taras developer ' %}
  <p>{{ title | strip | capitalize | truncate: 10 }}</p>

  {% if title contains 'developer' %}
    <p>Hello developer</p>
  {% else %}
    <p>Hello default human</p>
  {% endif %}

  {% assign price = 100 %}
  <p>{{ price | times: 1.2 }}%</p>
  <p>{{ price | minus: 10 }}</p>
  <p>{{ price | times: 2 }}</p>
  <p>{{ price | divided_by: 4 | times: 2 }}</p>

  {% assign fruits = 'apple,banana,orange' | split: ',' %}
  {% for item in fruits %}
    <p>{{ item | capitalize }}</p>
  {% endfor %}

  <p>Total fruits: {{ fruits.size }}</p>

  <p>Firts fruits: {{ fruits.first }}</p>
  <p>last fruits: {{ fruits.last }}</p>

  {% if price >= 12500 %}
    <p>Premium</p>
  {% elsif price >= 100 %}
    <p>Standard</p>
  {% else %}
    <p>Budget</p>
  {% endif %}

